{
    "name": "@cybearl/cypack",
    "productName": "CyPack",
    "version": "2025.1.5",
    "description": "A set of general utilities for Cybearl projects.",
    "author": "Cybearl <[email protected]> (https://www.cybearl.com/)",
    "license": "MIT",
    "private": false,
    "homepage": "https://github.com/cybearl/cypack",
    "repository": {
        "url": "https://github.com/cybearl/cypack"
    },
    "bugs": "https://github.com/cybearl/cypack/issues",
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/@cybearl"
    },
    "keywords": [
        "cybearl",
        "cypack",
        "utilities"
    ],
    "type": "module",
    "engines": {
        "node": ">=20"
    },
    "files": [
        "*"
    ],
    "main": "index.js",
    "module": "index.js",
    "exports": {
        "./backend": {
            "types": "./backend.d.ts",
            "node": "./backend.js",
            "default": "./empty.js"
        },
        "./frontend": {
            "types": "./frontend.d.ts",
            "import": "./frontend.js"
        },
        ".": {
            "types": "./index.d.ts",
            "import": "./index.js"
        }
    },
    "scripts": {
        "v-bump": "yarn version --patch",
        "build": "tsup",
        "test:sandbox": "tsx ./tests/sandbox.ts",
        "test:bench": "tsx ./tests/benchmark.ts",
        "test:unit": "vitest",
        "knip": "knip",
        "lint": "biome lint . && biome format .",
        "lint:fix": "biome lint . --write && biome format --write .",
        "check-types": "tsc --noEmit"
    },
    "dependencies": {
        "colorette": "^2.0.20",
        "dateformat": "^5.0.3",
        "dedent-js": "^1.0.1",
        "pino": "^9.6.0",
        "pino-pretty": "^13.0.0"
    },
    "peerDependencies": {
        "typescript": ">=5.7.0"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@types/copyfiles": "^2.4.4",
        "@types/dateformat": "^5.0.3",
        "@types/minimist": "^1.2.5",
        "@types/node": "^22.10.10",
        "copyfiles": "^2.4.1",
        "knip": "^5.43.6",
        "minimist": "^1.2.8",
        "tsup": "^8.3.6",
        "tsx": "^4.19.2",
        "typescript": "^5.7.3",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.0.4"
    }
}