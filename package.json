{
    "name": "@cybearl/cypack",
    "productName": "CyPack",
    "version": "2025.1.4",
    "description": "A set of general utilities for Cybearl projects.",
    "author": "Cybearl <[email protected]> (https://www.cybearl.com/)",
    "license": "MIT",
    "private": false,
    "homepage": "https://github.com/cybearl/cypack",
    "repository": {
        "url": "https://github.com/cybearl/cypack"
    },
    "bugs": "https://github.com/cybearl/cypack/issues",
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/@cybearl"
    },
    "keywords": [
        "cybearl",
        "cypack",
        "utilities"
    ],
    "type": "module",
    "engines": {
        "node": ">=20"
    },
    "files": [
        "*"
    ],
    "main": "index.js",
    "module": "index.js",
    "exports": {
        "./backend": {
            "types": "./backend.d.ts",
            "node": "./backend.js",
            "default": "./empty.js"
        },
        "./frontend": {
            "types": "./frontend.d.ts",
            "import": "./frontend.js"
        },
        ".": {
            "types": "./index.d.ts",
            "import": "./index.js"
        }
    },
    "scripts": {
        "v-bump": "yarn version --patch",
        "build": "tsup",
        "watch": "tsup --watch",
        "test:sandbox": "tsx ./tests/sandbox.ts",
        "lint": "biome lint .",
        "lint:fix": "biome lint . --write",
        "format": "biome format .",
        "format:fix": "biome format --write .",
        "check-types": "tsc --noEmit"
    },
    "dependencies": {
        "colorette": "^2.0.20",
        "dateformat": "^5.0.3",
        "dedent-js": "^1.0.1",
        "pino": "^9.6.0",
        "pino-pretty": "^13.0.0"
    },
    "peerDependencies": {
        "typescript": ">=5.7.0"
    },
    "devDependencies": {
        "@babel/core": "^7.26.7",
        "@babel/plugin-syntax-flow": "^7.26.0",
        "@babel/plugin-transform-private-property-in-object": "^7.25.9",
        "@babel/plugin-transform-unicode-property-regex": "^7.25.9",
        "@biomejs/biome": "^1.9.4",
        "@types/copyfiles": "^2.4.4",
        "@types/dateformat": "^5.0.3",
        "@types/node": "^22.10.10",
        "@types/valid-url": "^1.0.7",
        "concurrently": "^9.1.2",
        "copyfiles": "^2.4.1",
        "cross-env": "^7.0.3",
        "tsconfig-paths-webpack-plugin": "^4.2.0",
        "tsup": "^8.3.6",
        "tsx": "^4.19.2",
        "typescript": "^5.7.3",
        "webpack": "^5.97.1"
    }
}