{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "a11y": {
                "noAutofocus": "off",
                "useButtonType": "off"
            },
            "complexity": {
                "noForEach": "off"
            },
            "correctness": {
                "useExhaustiveDependencies": "off",
                "noUnusedVariables": "warn",
                "noUnusedImports": "warn",
                "noConstructorReturn": "off"
            },
            "style": {
                "noNegationElse": "warn",
                "useFragmentSyntax": "off",
                "noParameterAssign": "off"
            },
            "suspicious": {
                "noArrayIndexKey": "off",
                "noConsoleLog": "warn",
                "noEmptyBlockStatements": "error",
                "useAwait": "error",
                "noFocusedTests": "info"
            }
        }
    },
    "javascript": {
        "formatter": {
            "enabled": true,
            "semicolons": "asNeeded",
            "quoteStyle": "double",
            "indentStyle": "tab",
            "lineWidth": 120,
            "lineEnding": "lf",
            "bracketSpacing": true,
            "jsxQuoteStyle": "double",
            "arrowParentheses": "asNeeded",
            "indentWidth": 4
        }
    },
    "json": {
        "formatter": {
            "enabled": false
        }
    },
    "files": {
        "ignore": [
            "dist/*",
            "node_modules/*",
            "src/biome.json"
        ]
    }
}