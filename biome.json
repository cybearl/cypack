{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    },
    "files": {
        "ignoreUnknown": true,
        "includes": [
            "**",
            "!node_modules",
            "!dist",
            "!.vscode"
        ]
    },
    "javascript": {
        "formatter": {
            "enabled": true,
            "semicolons": "asNeeded",
            "quoteStyle": "double",
            "lineWidth": 120,
            "lineEnding": "lf",
            "bracketSpacing": true,
            "jsxQuoteStyle": "double",
            "arrowParentheses": "asNeeded"
        }
    },
    "json": {
        "formatter": {
            "enabled": false
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "complexity": {
                "noForEach": "off"
            },
            "correctness": {
                "noUnusedVariables": "warn",
                "noUnusedImports": "warn"
            },
            "style": {
                "noNegationElse": "warn",
                "useFragmentSyntax": "off",
                "noNonNullAssertion": "off",
                "useImportType": "off"
            },
            "suspicious": {
                "noArrayIndexKey": "off",
                "noEmptyBlockStatements": "error",
                "useAwait": "off",
                "noExplicitAny": "off",
                "noUnknownAtRules": "off"
            }
        }
    }
}